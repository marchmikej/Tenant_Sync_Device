<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:keepScreenOn="true"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="333dp"
        android:layout_height="118dp"
        android:id="@+id/imageView"
        android:src="@drawable/tenantsync_logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="450dp"
        android:layout_height="170dp"
        android:textSize="30sp"
        android:text="@string/maintenance_button"
        android:id="@+id/maintenanceButton"
        android:drawableLeft="@drawable/maintenance_icon_64"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToMaintenance" />

    <Button
        android:layout_width="450dp"
        android:layout_height="170dp"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/conversation_icon_64"
        android:text="@string/contact_button"
        android:id="@+id/contactButton"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/maintenanceButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToContact"/>

    <Button
        android:layout_width="450dp"
        android:layout_height="170dp"
        android:textSize="30sp"
        android:text="@string/pay_rent_button"
        android:drawableLeft="@drawable/payment_icon_64"
        android:id="@+id/payRentButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/contactButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToPayRent"/>

</RelativeLayout>
