<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:text="@string/maintenance_button"
        android:id="@+id/maintenanceButton"
        android:layout_marginTop="92dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToMaintenance" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:text="@string/contact_button"
        android:id="@+id/contactButton"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/maintenanceButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToContact"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:textSize="20sp"
        android:text="@string/pay_rent_button"
        android:id="@+id/payRentButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/contactButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToPayRent"/>

</RelativeLayout>
