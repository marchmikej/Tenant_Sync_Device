<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:id="@+id/customactionbar"
        android:background="@drawable/action_bar_background"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:id="@+id/showactivity"
            android:src="@drawable/schedule_payment_heading" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:id="@+id/actionspace1"
            android:text=""
            android:textSize="95px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton"
            android:background="@drawable/home_button_white"
            android:onClick="goback" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/actionspace2"
            android:text=""
            android:textSize="95px" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paymentButton"
            android:background="@drawable/money_green" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/actionspace3"
            android:text=""
            android:textSize="95px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatButton"
            android:onClick="goToContact"
            android:background="@drawable/chat_bubble_white" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/actionspace4"
            android:text=""
            android:textSize="95px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maintenanceButton"
            android:onClick="maintenanceHome"
            android:background="@drawable/wrench_white" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading"
        android:layout_below="@+id/customactionbar"
        android:textColor="#ffffff"
        android:id="@+id/confirmation"
        android:textSize="55px"/>
</RelativeLayout>
